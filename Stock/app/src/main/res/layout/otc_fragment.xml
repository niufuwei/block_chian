<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.fragment.otc.OTCFragment">

    <RelativeLayout
        android:id="@+id/magicIndicator_lin"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginRight="10dp">
        <com.hjq.demo.view.magicindicator.MagicIndicator
            android:paddingBottom="5dp"
            android:id="@+id/magicIndicator"
            android:layout_width="150dp"
            android:layout_height="45dp"/>

        <TextView
            android:id="@+id/funding_records"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_000000"
            android:text="@string/funding_records"/>
    </RelativeLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_page"
        android:layout_below="@id/magicIndicator_lin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>