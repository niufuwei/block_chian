<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.activity.otc.OrderPayActivity">

    <RelativeLayout
        android:id="@+id/title_lay"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginRight="@dimen/dp_10">
        
        <ImageView
            android:id="@+id/back_img"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:scaleType="center"
            android:src="@drawable/ic_back"/>

       <TextView
           android:id="@+id/title_ty"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerInParent="true"
           android:textSize="@dimen/sp_18"
           android:textColor="@color/color_000000"
           android:text="@string/order_pay"/>
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_above="@id/buttom_bt"
        android:layout_below="@id/title_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/buy_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_25"
                android:textSize="@dimen/sp_17"
                android:textStyle="bold"
                android:textColor="@color/color_000000"
                android:text="买入usdt"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/color_E5E5E5"/>
            <RelativeLayout
                android:id="@+id/order_num_lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/exchange_rate"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_marginLeft="@dimen/dp_25">

                <TextView
                    android:id="@+id/order_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/color_666666"
                    android:text="@string/order_num"/>

                <TextView
                    android:id="@+id/order_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/order_num"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    android:textColor="@color/color_000000"
                    android:text="20200038377737623"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/price_lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/exchange_rate"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_marginLeft="@dimen/dp_25">

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="@string/price"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/sp_14"/>

                <TextView
                    android:id="@+id/price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/price"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    android:textColor="@color/color_000000"
                    android:text="20200038377737623"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/quantity_lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/exchange_rate"
                android:layout_margin="@dimen/dp_25">

                <TextView
                    android:id="@+id/quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/color_666666"
                    android:text="@string/quantity"/>

                <TextView
                    android:id="@+id/quantity_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/quantity"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    android:textColor="@color/color_000000"
                    android:text="20200038377737623"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/color_E5E5E5"/>

            <RelativeLayout
                android:id="@+id/paid_amount_lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/buy_in"
                android:layout_margin="@dimen/dp_25">
                <LinearLayout
                    android:id="@+id/paid_amount_lay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                    android:id="@+id/paid_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    android:textColor="@color/color_666666"
                    android:text="@string/paid_amount"/>

                <TextView
                    android:id="@+id/paid_amount_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/paid_amount"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    android:textColor="@color/color_000000"
                    android:text="20200038377737623"/>

                <TextView
                    android:id="@+id/copy_paid_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/paid_amount_tv"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:background="@drawable/cpoy_btu_bg"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/color_318AFD"
                    android:text="@string/copy"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/buy_in_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/paid_amount_lay"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/color_FF7858"
                    android:text="@string/buy_in_tip"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:layout_alignParentBottom="true"
                android:background="@color/color_FAFBFD"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_25"
                android:textSize="@dimen/sp_17"
                android:textStyle="bold"
                android:textColor="@color/color_000000"
                android:text="付款方式"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/color_E5E5E5"/>
            <RelativeLayout
                android:id="@+id/name_lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/exchange_rate"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_25">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/color_666666"
                    android:text="@string/name"/>

                <TextView
                    android:id="@+id/name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/name"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    android:textColor="@color/color_000000"
                    android:text="20200038377737623"/>

                <TextView
                    android:id="@+id/copy_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/name_tv"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:background="@drawable/cpoy_btu_bg"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/color_318AFD"
                    android:text="@string/copy"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/pay_platform_lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/exchange_rate"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_25">

                <TextView
                    android:id="@+id/pay_platform"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/color_666666"
                    android:text="@string/pay_platform"/>

                <TextView
                    android:id="@+id/pay_platform_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/pay_platform"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    android:textColor="@color/color_000000"
                    android:text="支付宝"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/account_lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/exchange_rate"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_25">

                <TextView
                    android:id="@+id/account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/color_666666"
                    android:text="@string/account"/>

                <TextView
                    android:id="@+id/account_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/account"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    android:textColor="@color/color_000000"
                    android:text="20200038377737623"/>

                <TextView
                    android:id="@+id/copy_account_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/account_tv"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:background="@drawable/cpoy_btu_bg"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/color_318AFD"
                    android:text="@string/copy"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/qr_code_lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/exchange_rate"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_25">

                <TextView
                    android:id="@+id/qr_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/color_666666"
                    android:text="@string/qr_code"/>

                <ImageView
                    android:id="@+id/qr_code_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/qr_code"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:src="@mipmap/ic_launcher"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/order_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_below="@id/paid_amount_lay"
                android:layout_marginTop="@dimen/dp_5"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/color_FF7858"
                android:text="@string/order_tip"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/paid_amount_lay"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textSize="@dimen/sp_11"
                    android:textColor="@color/color_323232"
                    android:text="请在"/>

                <TextView
                    android:id="@+id/minute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/paid_amount_lay"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textSize="@dimen/sp_13"
                    android:textStyle="bold"
                    android:textColor="@color/color_323232"
                    android:text="12"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/paid_amount_lay"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/color_323232"
                    android:text="分"/>
                <TextView
                    android:id="@+id/second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/paid_amount_lay"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textSize="@dimen/sp_13"
                    android:textStyle="bold"
                    android:textColor="@color/color_323232"
                    android:text="44"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/paid_amount_lay"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/color_323232"
                    android:text="秒"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/paid_amount_lay"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textSize="@dimen/sp_11"
                    android:textColor="@color/color_323232"
                    android:text="内向以上账户转入"/>

                <TextView
                    android:id="@+id/rmb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/paid_amount_lay"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textSize="@dimen/sp_13"
                    android:textStyle="bold"
                    android:textColor="@color/color_323232"
                    android:text="10000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/paid_amount_lay"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textSize="@dimen/sp_11"
                    android:textColor="@color/color_323232"
                    android:text="人民币"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/paid_amount_lin"
                android:layout_marginLeft="@dimen/dp_15"
                android:padding="@dimen/dp_15"
                android:background="@color/color_ECECF3"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/color_656565"
                android:text="@string/buy_tip"
                android:lineSpacingExtra="5dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/buttom_bt"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_15"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bt_buy_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_50"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/bt_cancel_bg"
            android:textSize="@dimen/sp_17"
            android:textColor="@color/color_666666"
            android:text="@string/cancel_order"/>

        <TextView
            android:id="@+id/bt_buy"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_50"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_15"
            android:gravity="center"
            android:background="@drawable/but_buy_now_bg"
            android:textSize="@dimen/sp_17"
            android:textColor="@color/white"
            android:text="@string/paid_have"/>

    </LinearLayout>
</RelativeLayout>